<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI" 
        mc:Ignorable="d"
        Title="Recursive Shapes" Height="450" Width="600">
    <Grid>
        <Label Content="Enter recursion scale : " HorizontalAlignment="Left" Height="31" Margin="76,56,0,0" VerticalAlignment="Top" Width="128"/>
        <TextBox Name="tBScale" HorizontalAlignment="Left" Height="31" Margin="293,56,0,0" Text="20" TextWrapping="Wrap" VerticalAlignment="Top" Width="107" TextChanged="tBScale_TextChanged"/>
        <Label Content="Choose one of &#x0a;the recursive shapes : " HorizontalAlignment="Left" Height="43" Margin="76,135,0,0" VerticalAlignment="Top" Width="128"/>
        <Button Content="OK" HorizontalAlignment="Left" Height="42" Margin="211,357,0,0" VerticalAlignment="Top" Width="103" Click="Button_Click"/>

        <StackPanel Margin="10">
            <ComboBox ListBoxItem.Unselected="(Not Selected)" Text="Available Shapes" Name="cBShapes" HorizontalAlignment="Left" Height="32" Margin="282,135,0,0" VerticalAlignment="Top" Width="110" SelectionChanged="cBShapes_SelectionChanged"/>
        </StackPanel>

    </Grid>
</Window>
